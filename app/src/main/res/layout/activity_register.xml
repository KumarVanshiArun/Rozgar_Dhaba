<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_blue"
    tools:context=".RegisterActivity">




       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:layout_margin="10dp"
           android:background="@drawable/border">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/textview_register_head"
               android:layout_marginTop="30sp"
               android:text="Please enter your details to Register on the App"
               android:textAlignment="center"
               android:textAppearance="@style/TextAppearance.AppCompat.Headline"
               android:gravity="center_horizontal" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/textview_register_full_name"
               android:layout_below="@id/textview_register_head"
               android:text="Full Name*"
               android:textStyle="bold"
               android:textColor="#555555"
               android:padding="10dp"
               android:textSize="18sp"
               android:layout_marginTop="40sp"/>


           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/editText_register_full_name"
               android:layout_below="@id/textview_register_full_name"
               android:hint="Enter Your Full Name"
               android:padding="6dp"
               android:elevation="5dp"
               android:inputType="textPersonName"
               android:background="@drawable/border"
               android:textSize="16sp"/>


           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/textview_register_father_name"
               android:layout_below="@id/editText_register_full_name"
               android:text="Father Name*"
               android:textStyle="bold"
               android:textColor="#555555"
               android:layout_marginTop="10dp"
               android:padding="6dp"
               android:textSize="18sp" />


           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/editText_register_father_name"
               android:layout_below="@id/textview_register_father_name"
               android:hint="Enter Your Father Name"
               android:padding="6dp"
               android:inputType="textPersonName"
               android:background="@drawable/border"
               android:textSize="16sp"/>


           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/textview_register_email"
               android:layout_below="@id/editText_register_father_name"
               android:text="Email*"
               android:textStyle="bold"
               android:textColor="#555555"
               android:padding="6dp"
               android:textSize="18sp"
               android:layout_marginTop="10dp"/>


           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/editText_register_email"
               android:layout_below="@id/textview_register_email"
               android:hint="Enter Your Email id"
               android:padding="6dp"
               android:inputType="textEmailAddress"
               android:background="@drawable/border"
               android:textSize="16sp"/>



           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:id="@+id/textview_register_dob"
               android:layout_below="@id/editText_register_email"
               android:text="Date of Birth(dd/mm/yyyy)*"
               android:textColor="#555555"
               android:padding="6dp"
               android:textSize="18sp"
               android:layout_marginTop="10dp"/>


           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/editText_register_dob"
               android:layout_below="@id/textview_register_dob"
               android:hint="Select Your DOB(dd/mm/yyyy)"
               android:padding="6dp"
               android:inputType="date"
               android:background="@drawable/border"
               android:textSize="16sp"
               android:focusable="false"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/textview_register_aadhaar_number"
               android:layout_below="@id/editText_register_dob"
               android:text="Aadhaar No.*"
               android:textStyle="bold"
               android:textColor="#555555"
               android:padding="6dp"
               android:textSize="18sp"
               android:layout_marginTop="10dp"/>


           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/editText_register_aadhaar_number"
               android:layout_below="@id/textview_register_aadhaar_number"
               android:hint="Enter Your Aadhaar Number"
               android:padding="6dp"
               android:inputType="number"
               android:background="@drawable/border"
               android:textSize="16sp"/>


           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/textview_register_gender"
               android:layout_below="@id/editText_register_aadhaar_number"
               android:text="Gender*"
               android:textColor="#555555"
               android:textStyle="bold"
               android:padding="6dp"
               android:textSize="18sp"
               android:layout_marginTop="10dp"/>


           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_below="@id/textview_register_gender"
               android:id="@+id/radio_group_register_gender"
               >

               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/radio_male_btn"
                   android:text="Male"
                   android:textSize="16sp"
                   android:textColor="#555555"/>

               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/radio_female_btn"
                   android:text="Female"
                   android:layout_marginLeft="20dp"
                   android:textSize="16sp"
                   android:textColor="#555555"/>


               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/radio_trans_btn"
                   android:text="Other"
                   android:layout_marginLeft="20dp"
                   android:textSize="16sp"
                   android:textColor="#555555"/>

           </RadioGroup>


           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/textview_education"
               android:text="Education*"
               android:textStyle="bold"
               android:layout_below="@id/radio_group_register_gender"
               android:padding="6dp"
               android:textColor="#555555"
               android:textSize="18sp"
               android:layout_marginTop="10dp"
               />

           <Spinner
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/spinner_education"
               android:layout_below="@id/textview_education"
               android:padding="4dp"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/textview_skills"
               android:text="Skills*"
               android:textStyle="bold"
               android:layout_below="@id/spinner_education"
               android:padding="6dp"
               android:textColor="#555555"
               android:textSize="18sp"
               android:layout_marginTop="10dp"
               />

           <Spinner
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/spinner_skills"
               android:layout_below="@id/textview_skills"
               android:padding="4dp"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/textview_register_experience"
               android:layout_below="@id/spinner_skills"
               android:text="Experience*"
               android:textStyle="bold"
               android:textColor="#555555"
               android:layout_marginTop="10dp"
               android:padding="6dp"
               android:textSize="18sp" />


           <EditText
               android:layout_width="400dp"
               android:layout_height="70dp"
               android:id="@+id/editText_register_experience"
               android:layout_below="@id/textview_register_experience"
               android:hint="Ex :- Welding with 4 Years Experience"
               android:padding="6dp"
               android:inputType="text"
               android:background="@drawable/border"
               android:textSize="16sp"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/textview_register_disability"
               android:layout_below="@id/editText_register_experience"
               android:text="Disability*"
               android:textColor="#555555"
               android:textStyle="bold"
               android:padding="6dp"
               android:textSize="18sp"
               android:layout_marginTop="10dp"/>


           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_below="@id/textview_register_disability"
               android:id="@+id/radio_group_register_disability"
               >

               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/radio_yes_btn"
                   android:text="Yes"
                   android:textSize="16sp"
                   android:textColor="#555555"/>

               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/radio_no_btn"
                   android:text="No"
                   android:layout_marginLeft="20dp"
                   android:textSize="16sp"
                   android:textColor="#555555"/>


               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/radio_partial_btn"
                   android:text="Partial"
                   android:layout_marginLeft="20dp"
                   android:textSize="16sp"
                   android:textColor="#555555"/>

               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/radio_partial_other_btn"
                   android:text="Other"
                   android:layout_marginLeft="20dp"
                   android:textSize="16sp"
                   android:textColor="#555555"/>

           </RadioGroup>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/textview_register_ready_work"
               android:layout_below="@id/radio_group_register_disability"
               android:text="Are you ready to go other state for work ?"
               android:textColor="#555555"
               android:textStyle="bold"
               android:padding="6dp"
               android:textSize="18sp"
               android:layout_marginTop="10dp"/>


           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_below="@id/textview_register_ready_work"
               android:id="@+id/radio_group_register_ready_work"
               >

               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/radio_yess_btn"
                   android:text="Yes"
                   android:textSize="16sp"
                   android:textColor="#555555"/>

               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/radio_noo_btn"
                   android:text="No"
                   android:layout_marginLeft="20dp"
                   android:textSize="16sp"
                   android:textColor="#555555"/>

           </RadioGroup>



           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:id="@+id/textview_register_mobile"
               android:layout_below="@id/radio_group_register_ready_work"
               android:text="Mobile No*"
               android:textColor="#555555"
               android:padding="6dp"
               android:textSize="18sp"
               android:layout_marginTop="10dp"/>


           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/editText_register_mobile"
               android:layout_below="@id/textview_register_mobile"
               android:hint="Enter Your Mobile No.(Without +91)"
               android:padding="6dp"
               android:inputType="phone"
               android:background="@drawable/border"
               android:textSize="16sp"/>


           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:id="@+id/textview_register_address"
               android:layout_below="@id/editText_register_mobile"
               android:text="Address*"
               android:textColor="#555555"
               android:padding="6dp"
               android:textSize="18sp"
               android:layout_marginTop="10dp"/>


           <EditText
               android:layout_width="400dp"
               android:layout_height="100dp"
               android:id="@+id/editText_register_address"
               android:layout_below="@id/textview_register_address"
               android:hint="Ex:- Village,District,State"
               android:padding="6dp"
               android:inputType="text"
               android:background="@drawable/border"
               android:textSize="16sp"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:id="@+id/textview_register_pin"
               android:layout_below="@id/editText_register_address"
               android:text="PIN Code*"
               android:textColor="#555555"
               android:padding="6dp"
               android:textSize="18sp"
               android:layout_marginTop="10dp"/>


           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/editText_register_pin"
               android:layout_below="@id/textview_register_pin"
               android:hint="Type your PIN Code"
               android:padding="6dp"
               android:inputType="number"
               android:background="@drawable/border"
               android:textSize="16sp"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/textview_indian_states"
               android:text="States*"
               android:textStyle="bold"
               android:layout_below="@id/editText_register_pin"
               android:padding="6dp"
               android:textColor="#555555"
               android:textSize="18sp"
               android:layout_marginTop="10dp"
               />

           <Spinner
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/spinner_indian_states"

               android:layout_below="@id/textview_indian_states"
               android:padding="4dp"/>


           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/textview_indian_districts"
               android:text="District*"
               android:textStyle="bold"
               android:layout_below="@id/spinner_indian_states"
               android:padding="6dp"
               android:textColor="#555555"
               android:textSize="18sp"
               android:layout_marginTop="10dp"
               />

           <Spinner
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/spinner_indian_districts"
               android:layout_below="@id/textview_indian_districts"
               android:padding="6dp"/>


           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:id="@+id/textview_register_password"
               android:layout_below="@id/spinner_indian_districts"
               android:text="Password*"
               android:textColor="#555555"
               android:padding="6dp"
               android:textSize="18sp"
               android:layout_marginTop="10dp"/>


           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/editText_register_password"
               android:layout_below="@id/textview_register_password"
               android:hint="Enter Your Password"
               android:padding="6dp"
               android:inputType="textPassword"
               android:background="@drawable/border"
               android:textSize="16sp"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:id="@+id/textview_register_confirm_password"
               android:layout_below="@id/editText_register_password"
               android:text="Confirm Password*"
               android:textColor="#555555"
               android:padding="6dp"
               android:textSize="18sp"
               android:layout_marginTop="10dp"/>


           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/editText_register_confirm_password"
               android:layout_below="@id/textview_register_confirm_password"
               android:hint="Confirm Your Password"
               android:padding="6dp"
               android:inputType="textPassword"
               android:background="@drawable/border"
               android:textSize="16sp"/>

           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="90dp"
               android:layout_marginRight="90dp"
               android:text=" Register "
               android:id="@+id/register_button"
               android:textStyle="bold"
               android:background="@drawable/border"
               android:textSize="16sp"
               android:textColor="@color/lime"
               android:layout_marginTop="50dp"
               android:layout_marginBottom="20dp"
               android:layout_below="@id/editText_register_confirm_password"/>

           <ProgressBar
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/progressbar"
               android:layout_centerHorizontal="true"
               android:foregroundGravity="center"
               android:layout_centerVertical="true"
               android:elevation="10dp"
               android:visibility="gone"
               />
       </RelativeLayout>

</ScrollView>