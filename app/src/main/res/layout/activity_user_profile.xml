<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_blue"
    tools:context=".UserProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/sky_blue"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/sky_blue"
            android:layout_marginBottom="10dp"
            >

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/imageView_profile_dp"
               android:layout_width="180dp"
               android:layout_height="180dp"
               android:layout_centerInParent="true"
               app:civ_border_width="2dp"
               app:civ_border_color="@color/sky_blue"
               android:background="@drawable/no_profile_pic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_show_welcome"
                android:layout_below="@id/imageView_profile_dp"
                android:hint="@string/loading"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white"/>

        </RelativeLayout>



          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="15dp"
              android:layout_margin="15dp"
              android:background="@drawable/border">

              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:id="@+id/ic_profile"
                  android:background="@drawable/ic_profile"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/textView_show_full_name"
                  android:layout_alignStart="@+id/ic_profile"
                  android:hint="Loading..."
                  android:textStyle="bold"
                  android:layout_marginStart="50dp"
                  android:textSize="18sp"/>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="20dp"
                  android:layout_below="@id/textView_show_full_name"
                  android:id="@+id/divider_name"
                  android:background="@color/dark_green"/>


              <ImageView
                  android:layout_width="32dp"
                  android:layout_height="32dp"
                  android:id="@+id/ic_email"
                  android:background="@drawable/ic_email_logo"
                  android:layout_marginTop="20dp"
                  android:layout_below="@+id/divider_name"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/textView_show_email"
                  android:layout_alignStart="@+id/ic_email"
                  android:hint="Loading..."
                  android:layout_below="@id/divider_name"
                  android:textStyle="bold"
                  android:layout_marginStart="50dp"
                  android:layout_marginTop="20dp"
                  android:textSize="18sp"/>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="20dp"
                  android:id="@+id/divider_email"
                  android:layout_below="@id/textView_show_email"
                  android:background="@color/dark_green"/>

              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:id="@+id/ic_dob"
                  android:background="@drawable/ic_birthday_logo"
                  android:layout_marginTop="20dp"
                  android:layout_below="@+id/divider_email"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/textView_show_dob"
                  android:layout_alignStart="@+id/ic_dob"
                  android:hint="Loading..."
                  android:layout_below="@id/divider_email"
                  android:layout_marginStart="50dp"
                  android:layout_marginTop="20dp"
                  android:textStyle="bold"
                  android:textSize="18sp"/>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="20dp"
                  android:id="@+id/divider_dob"
                  android:layout_below="@id/textView_show_dob"
                  android:background="@color/dark_green"/>

              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:id="@+id/ic_gender"
                  android:background="@drawable/ic_gender_logo"
                  android:layout_marginTop="20dp"
                  android:layout_below="@+id/divider_dob"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/textView_show_gender"
                  android:layout_alignStart="@+id/ic_gender"
                  android:hint="Loading..."
                  android:textStyle="bold"
                  android:layout_below="@id/divider_dob"
                  android:layout_marginStart="50dp"
                  android:layout_marginTop="20dp"
                  android:textSize="18sp"/>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="20dp"
                  android:id="@+id/divider_gender"
                  android:layout_below="@id/textView_show_gender"
                  android:background="@color/dark_green"/>


              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:id="@+id/ic_phone"
                  android:background="@drawable/ic_phone_logo"
                  android:layout_marginTop="20dp"
                  android:layout_below="@+id/divider_gender"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/textView_show_phone"
                  android:layout_alignStart="@+id/ic_phone"
                  android:hint="Loading..."
                  android:textStyle="bold"
                  android:layout_below="@id/divider_gender"
                  android:layout_marginStart="50dp"
                  android:layout_marginTop="20dp"
                  android:textSize="18sp"/>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="20dp"
                  android:id="@+id/divider_phone"
                  android:layout_below="@id/textView_show_phone"
                  android:background="@color/dark_green"/>


              <ImageView
                  android:layout_width="32dp"
                  android:layout_height="32dp"
                  android:id="@+id/ic_aadhaar"
                  android:background="@drawable/ic_aadhaar_ogo"
                  android:layout_marginTop="20dp"
                  android:layout_below="@+id/divider_phone"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/textView_show_aadhaar"
                  android:layout_alignStart="@+id/ic_aadhaar"
                  android:hint="Loading..."
                  android:layout_below="@id/divider_phone"
                  android:layout_marginStart="50dp"
                  android:textStyle="bold"
                  android:layout_marginTop="20dp"
                  android:textSize="18sp"/>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="20dp"
                  android:id="@+id/divider_aadhaar"
                  android:layout_below="@id/textView_show_aadhaar"
                  android:background="@color/dark_green"/>


              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:id="@+id/ic_address"
                  android:background="@drawable/ic_home_address_logo"
                  android:layout_marginTop="20dp"
                  android:layout_below="@+id/divider_aadhaar"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/textView_show_address"
                  android:layout_alignStart="@+id/ic_address"
                  android:hint="Loading..."
                  android:textStyle="bold"
                  android:layout_below="@id/divider_aadhaar"
                  android:layout_marginStart="50dp"
                  android:layout_marginTop="20dp"
                  android:textSize="18sp"/>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="20dp"
                  android:id="@+id/divider_address"
                  android:layout_below="@id/textView_show_address"
                  android:background="@color/dark_green"/>

              <ProgressBar
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/progressbar"
                  style="?android:attr/progressBarStyleLarge"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:visibility="gone"
                  android:elevation="10dp"/>

          </RelativeLayout>


    </LinearLayout>

</ScrollView>